<div class="wrapper">
	<div class="row">
		<h1>Benutzer Index</h1>
	</div>
	<div class="row form">

		<div class="col-2-of-12">
			<%= render "./admin/shared/sidebar" %></div>
		

		<div class="col-10-of-12">
			<table>
				<thead>
					<tr>
						<th style="width: 120px;">Benutzername</th>
						<th>Rolle</th>
						<th>Email</th>
						<th>Bearbeiten</th>
						<th>Löschen</th>
					</tr>
				</thead>
				<tbody>
					<% @users.each do |user| %>
						<tr>
							<td><%= user.username %></td>
							<td><%= user.role %></td>
							<td><%= user.email %></td>
							<td><%= link_to 'bearbeiten', edit_admin_user_path(user) %></td>
							<td><%= link_to 'löschen', [:admin, user], method: :delete, data: {confirm: 'wirklich löschen?'} %></td>
						</tr>
					<% end %>
				</tbody>
			</table>
			<div class="">
				<%= link_to 'Neuen Benutzer anlegen', sign_up_path, class: 'button button__bg--blue' %>
			</div>
		</div>
	</div>
</div>



