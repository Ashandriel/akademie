
<div class="wrapper">
  <div class="row">
    <h1>Benutzer bearbeiten</h1>
  </div>
  <div class="row form">

    <div class="col-2-of-12">
      <%= render "./admin/shared/sidebar" %></div>
    

    <div class="col-10-of-12 form">

      <%= simple_form_for  [:admin, @user], :html => { :class => 'form-horizontal' }  do |f| %>

        <div class="form__field">
          <%= f.error_notification %>
          <%= f.input :username, label: 'Benutzername' %>
        </div>
        <div class="form__field">
          <%= f.label :email %>
          <%= f.email_field :email %>
          
        </div>

        <div class="form__field">
          <%= f.label :Passwort %>
          <%= f.password_field :password %>
        </div>

        <div class="form__field">
          <%= f.label :Rolle %>
          <%= f.collection_select :role, User::ROLES, :to_s, :humanize %>
        </div>
        <%= f.button :submit, "Ã„nderungen speichern", class: 'button' %>
        <%= link_to 'Abbrechen', admin_users_path %>
      <% end %>
    </div>
  </div>
</div>