<div class="wrapper">
	<div class="row">
		<h1>Bilder Index</h1>
	</div>

	<div class="row form">
		<div class="col-2-of-12">
			<%= render "./admin/shared/sidebar" %>
		</div>

		<div class="col-10-of-12">
			<div class="">
				<%= link_to 'Bild hochladen', new_admin_image_path, class: 'button' %>
			</div>
			<% @images.each_slice(3) do |slice| %>
				<div class="row">
					<% slice.each do |image| %>
						<div class="col-1-of-3">
							<% if image.image_url.present? %>
					      <% if image.image_url.downcase.end_with?(".pdf") %>
					        <div class="image-upload">
					          <%= image_tag "icons/pdf.png", alt: "PDF-Dokument" %>
					        </div>
					      <% else %>
					        <div class="image-upload">
					          <%= image_tag image.image_url %>
					        </div>
					      <% end %>
					    <% else %>
					      <p>No image available</p>
					    <% end %>
							<div><%= link_to image.image_url, "#", onclick: "navigator.clipboard.writeText('#{image.image_url}').then(() => alert('URL kopiert!'))", title: "Klicke, um die URL zu kopieren" %></div>
							<div><%= link_to 'anzeigen', [:admin, image] %></div>
							<div><%= link_to 'bearbeiten', edit_admin_image_path(image) %></div>
							<%= link_to 'löschen', [:admin, image], method: :delete, data: {confirm: 'wirklich löschen?'} %>
						</div>
					<% end %>
				</div>
			<% end %>
			<div class="">
				<%= link_to 'Bild hochladen', new_admin_image_path, class: 'button' %>
			</div>
		</div>
	</div>
</div>
<div class="pagination">
  <%= paginate @images %>
</div>