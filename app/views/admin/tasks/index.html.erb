<div class="wrapper">
	<div class="row">
		<h1>Aufgaben Index</h1>
	</div>


	<div class="row form">
		<div class="col-2-of-12">
			<%= render "./admin/shared/sidebar" %>
		</div>
		

		<div class="col-10-of-12">
			<table>
				<thead>
					<tr>
						<th style="width: 120px;">Nummer</th>
						<th style="width: 120px;">Aufgabe</th>
						<th style="width: 120px;">Datum</th>
						<th>Anzeigen</th>
						<th>Bearbeiten</th>
						<th>Löschen</th>
					</tr>
				</thead>
				<tbody>
					<% @tasks.each do |task| %>
						<tr>
							<td><%= task.number %></td>
							<td><%= task.title %></td>
							<td><%= task.end.strftime("%d.%m.%Y") %></td>
							<td><%= link_to 'anzeigen', [:admin, task] %></td>
							<td><%= link_to 'bearbeiten', edit_admin_task_path(task) %></td>
							<td><%= link_to 'löschen', [:admin, task], method: :delete, data: {confirm: 'wirklich löschen?'} %></td>
						</tr>
					<% end %>
				</tbody>
			</table>
			<div class="">
				<%= link_to 'Aufgabe anlegen', new_admin_task_path, class: 'button' %>
			</div>
		</div>
	</div>
</div>



