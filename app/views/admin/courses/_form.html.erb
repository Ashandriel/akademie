<%= simple_form_for [:admin, @course] do |f| %>
  <div class="form__field">
    <%= f.input :title, label: 'Titel', required: true %>
  </div>

  <div class="form__field">
    <%= f.input :text_one, as: :text, label: 'Text 1', input_html: { rows: 5 } %>
  </div>

  <div class="form__field">
    <%= f.input :text_two, as: :text, label: 'Text 2', input_html: { rows: 5 } %>
  </div>

  <div class="form__field">
    <%= f.input :pdf_url, label: 'PDF-URL' %>
    <p class="form__hint">Komplette URL zum Infoblatt, z. B. https://example.com/datei.pdf</p>
  </div>

  <div class="form__field">
    <%= f.input :position, label: 'Position', hint: 'Reihenfolge in der Übersicht (kleinere Zahlen zuerst)' %>
  </div>

  <div class="form__field">
    <%= f.label :is_published, 'Veröffentlichen' %>
    <%= f.check_box :is_published %>
  </div>
  <div class="spacer">&nbsp;</div>
  <div class="form__actions">
    <%= f.button :submit, 'Speichern', class: 'button' %>
    <%= link_to 'Abbrechen', admin_courses_path, class: 'button button--secondary' %>
  </div>
<% end %>
